{
  "manifest_version": 3,
  "name": "AI Fashion Finder",
  "version": "1.0",
  "description": "Uses local AI to find fashion items on any e-commerce site.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AI Fashion Finder"
  },
  "options_page": "settings.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ProductFinder.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "models/*",
        "ProductFinder.js",
        "ai-worker.js",
        "dev-config.js",
        "debug-helper.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}