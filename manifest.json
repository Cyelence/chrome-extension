{
  "manifest_version": 3,
  "name": "Digital Closet - Wardrobe Tracker",
  "version": "1.0",
  "description": "Track your fashion purchases and build a digital wardrobe from any website.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "closet-background.js"
  },
  "action": {
    "default_title": "My Digital Closet",
    "default_popup": "closet-popup.html"
  },
  "options_page": "settings.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["closet-content.js", "closet-overlay.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "models/*",
        "ProductFinder.js",
        "ai-worker.js",
        "ai-worker-lite.js",
        "ai-config.js",
        "dev-config.js",
        "debug-helper.js",
        "closet-popup.html",
        "closet-popup.js",
        "closet-styles.css",
        "closet-content.js",
        "closet-overlay.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}